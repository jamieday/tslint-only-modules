{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6"],
    "outDir": "build/",
    "rootDir": "src/",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": false,
    "importHelpers": true,
    
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "pretty": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": true,
        "ignoreDefinitionFiles": true
      }
    ]
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}